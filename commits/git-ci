#!/bin/bash
if [ -z "$1" ]; then
  if [[ "$@" == *"-a"* ]]; then
    git add .
    for param; do
      [[ ! $param == '-a' ]] && newparams+=("$param")
    done
    set -- "${newparams[@]}"
    unset newparams
    git commit -am "ci: " -e
  else
    git commit -m "ci: " -e
  fi
elif [ "$1" == "-s" ]; then
  if [[ "$@" == *"-a"* ]]; then
    git add .
    for param; do
      [[ ! $param == '-a' ]] && newparams+=("$param")
    done
    set -- "${newparams[@]}"
    unset newparams
    git commit -am "ci(${2}): ${@:3}"
  else
    git commit -m "ci(${2}): ${@:3}"
  fi
else
  if [[ "$@" == *"-a"* ]]; then
    git add .
    for param; do
      [[ ! $param == '-a' ]] && newparams+=("$param")
    done
    set -- "${newparams[@]}"
    unset newparams
    git commit -am "ci: ${@}"
  else
    git commit -m "ci: ${@}"
  fi
fi
